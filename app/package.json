{
  "name": "Custody Chain App",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "chain-listner",
    "custodychain-web"
  ],
  "scripts": {
    "start": "concurrently \"npm start --workspace=chain-listener\" \"npm start --workspace=custodychain-web\"",
    "dev": "concurrently \"npm run dev --workspace=chain-listener\" \"npm run dev --workspace=custodychain-web\"",
    "deploy": "npm run deploy --workspace=custodychain-web",
    "build": "npm run build --workspace=custodychain-web && npm run build --workspace=chain-listener"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
